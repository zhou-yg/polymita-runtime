{
  "productName": "<%= name %>",
  "appId": "com.<%= appId %>",
  "asar": true,
  "asarUnpack": "**\\*.{node,dll}",
  "files": [
    "dist",
    "assets",
    "main",
    "static",
    "node_modules",
    "package.json"
  ],
  "mac": {
    "target": {
      "target": "default",
      "arch": [
        "x64"
      ]
    },
    "type": "distribution",
    "hardenedRuntime": true,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "gatekeeperAssess": false
  },
  "directories": {
    "app": "release/app",
    "buildResources": "assets",
    "output": "release/build"
  },
  "extraResources": [
    "./assets/**"
  ]
}